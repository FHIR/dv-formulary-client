<section class='container'>
	<section class='row col-12'>
		<%= form_tag root_path, method: 'get', class: 'form-inline', id: 'server-form' do %>
			<div class='form-group col-md-7'>
				<%= text_field_tag :server_url, cookies[:server_url], class: 'form-control',
							placeholder: 'http://your-formulary-server.org' %>
			</div>
			<%= button_tag class: 'btn btn-primary col-md-2', id: 'formulary-url' do %>
				Connect
			<% end %>
		<% end %>
	</section>
	<section class="row col-12">
		<%= form_tag formularies_path, method: 'get', class: 'form-inline', id: 'formulary-form' do %>
			<div class='form-group col-md-3'>
				<%= select_tag(:drug_tier, options_for_select([['All', 'All'], 
												['Generic', 'GENERIC'],
												['Preferred Brand', 'PREFERRED-BRAND'], 
												['Non-preferred Brand', 'NON-PREFERRED-BRAND'],
												['Specialty', 'SPECIALTY'], 
												['Non-preferred Brand Specialty', 'NON_PREFERRED-BRAND-SPECIALTY'],
												['Zero-cost Share Preventive', 'ZERO-COST-SHARE-PREVENTIVE']]),
												prompt: 'Drug Tier',
												class: 'custom-select drug-tier-select',
												id: 'inlineFormCustomSelect') %>
			</div>

			<%= button_tag class: 'btn btn-primary col-md-2', id: 'formulary-url' do %>
				Lookup
			<% end %>
		<% end %>
	</section>
</section>
